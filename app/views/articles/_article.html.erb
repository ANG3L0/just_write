<li id="article-<%= article.id %>">
	<!-- using pre so we cannot have whitespace in the code -->
		<span class="title"><%= article.title %></span>
		<div class="content"><%= article.content %></div>
		<div class="list-footer">
			<!--<span class="score label label-success">Rating: 12</span>-->
			<span class="score label label-danger">Rating: 12</span>
			<span class="timestamp">Published <%= time_ago_in_words(article.updated_at) %> ago</span>
		</div>
</li>